<Window x:Class="BeatSaberMan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeatSaberMan"
        mc:Ignorable="d"
        Title="BeatSaberMan" Height="450" Width="800" MinHeight="400" MinWidth="750" Closing="MainWindow_Closing">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainWindowIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="LevelStyle" TargetType="TextBlock">
                <Setter Property="Margin" Value="5,0,0,0" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Medium" />
            </Style>
            <Style x:Key="ItemButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="28"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Padding" Value="3"/>
            </Style>
            <Style x:Key="TopButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <StackPanel Orientation="Horizontal" Height="64" DockPanel.Dock="Top">
            <Button Click="OnRefreshClick" Style="{StaticResource TopButtonStyle}">
                <Image Source="{StaticResource RefreshIcon}"/>
            </Button>
            <StackPanel Orientation="Horizontal"  VerticalAlignment="Bottom">
                <TextBlock x:Name="tbSongCount" Margin="3,0,0,8" FontSize="18" FontWeight="DemiBold"/>
                <TextBlock x:Name="tbErroneousSongs" Margin="3,0,0,8" FontSize="18" FontWeight="DemiBold" Foreground="DarkRed"/>
            </StackPanel>
        </StackPanel>
        <ListBox x:Name="lbSongs" HorizontalContentAlignment="Stretch" DockPanel.Dock="Bottom">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle RadiusX="8" RadiusY="8" Height="128" Width="128" Grid.Column="0" Margin="3,1,3,5">
                                <Rectangle.Fill>
                                    <ImageBrush x:Name="SongImage" ImageSource="{Binding CoverImage}"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="6,0,0,0">
                                <TextBlock Text="{Binding SongName}" FontSize="36"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition MaxWidth="200"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,6,0">
                                        <TextBlock Text="{Binding Artist}" FontSize="18" HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding LevelAuthor}" FontSize="16" HorizontalAlignment="Left" Margin="0,0,0,4"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text=" EASY " Background="{Binding EasyBackground}" Foreground="{Binding EasyForeground}" Style="{StaticResource LevelStyle}" Margin="0"/>
                                            <TextBlock Text=" NORMAL " Background="{Binding NormalBackground}" Foreground="{Binding NormalForeground}" Style="{StaticResource LevelStyle}"/>
                                            <TextBlock Text=" HARD " Background="{Binding HardBackground}" Foreground="{Binding HardForeground}" Style="{StaticResource LevelStyle}"/>
                                            <TextBlock Text=" EXPERT " Background="{Binding ExpertBackground}" Foreground="{Binding ExpertForeground}" Style="{StaticResource LevelStyle}"/>
                                            <TextBlock Text=" EXPERT+ " Background="{Binding ExpertPlusBackground}" Foreground="{Binding ExpertPlusForeground}" Style="{StaticResource LevelStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border BorderBrush="LightGray" BorderThickness="1,0,0,0" Grid.Column="1">
                                        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="6,0,0,0">
                                            <TextBlock Text="{Binding TrackTime}" FontSize="14" HorizontalAlignment="Left"/>
                                            <TextBlock Text="{Binding BPM}" FontSize="14" HorizontalAlignment="Left"/>
                                            <TextBlock Text="{Binding Plays}" FontSize="14" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Vertical" Width="39" Margin="2">
                                <Button Click="OnClickPlay" Tag="{Binding SongDir}" Style="{StaticResource ItemButtonStyle}">
                                    <Image Source="{StaticResource PlayIcon}"/>
                                </Button>
                                <Button Click="OnClickFolder" Tag="{Binding SongDir}" Style="{StaticResource ItemButtonStyle}">
                                    <Image Source="{StaticResource FolderIcon}"/>
                                </Button>
                                <Button Click="OnClickFix" Tag="{Binding SongDir}" Style="{StaticResource ItemButtonStyle}" IsEnabled="{Binding FixEnabled}">
                                    <Image Source="{StaticResource FixIcon}"/>
                                </Button>
                                <Button Click="OnClickDelete" Tag="{Binding SongDir}" Style="{StaticResource ItemButtonStyle}">
                                    <Image Source="{StaticResource DeleteIcon}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
